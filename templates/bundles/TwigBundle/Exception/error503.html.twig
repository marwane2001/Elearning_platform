{% extends 'base.html.twig' %}

{% block title %}Service Unavailable{% endblock %}

{% block body %}
    <section class="py-3 py-md-5 min-vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="text-center">
                        <h2 class="d-flex justify-content-center align-items-center gap-2 mb-4">
                            <span class="display-1 fw-bold">5</span>
                            <i class="text-danger fa-bold display-2">0</i>
                            <span class="display-1 fw-bold bsb-flip-h">3</span>
                        </h2>
                        <h3 class="h2 mb-2">Oops! Service is unavailable.</h3>
                        <p class="mb-5">The server is temporarily unable to handle your request. Please try again later.</p>
                        <a class="btn bsb-btn-5xl btn-dark rounded-pill px-5 fs-6 m-0" href='/' role="button">Back to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
