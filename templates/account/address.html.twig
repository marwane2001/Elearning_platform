{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-2">
        <h1 class="mt-4">Members Space</h1>
        <h5 class="mb-4">My addresses</h5>
        <div class="row">
            <div class="col-md-4">
                {% include 'account/_menu.html.twig' %}
            </div>
            <div class="col-md-6">
                <h4>Address Form</h4>

                <span>{{ form_start(addressform) }}</span>
                    <div class="row">
                        <div class="col-md-6">
                                {{
                                    form_row(addressform.firstname)
                                }}
                        </div>
                        <div class="col-md-6">
                            {{
                            form_row(addressform.LastName)
                            }}
                        </div>
                        <div class="col-md-6">
                            {{
                            form_row(addressform.postal)
                            }}
                        </div>
                        <div class="col-md-6">
                            {{
                            form_row(addressform.city)
                            }}
                        </div>
                        <div class="col-md-6">
                            {{
                            form_row(addressform.country)
                            }}
                        </div>
                        <div class="col-md-6">
                            {{
                            form_row(addressform.phone)
                            }}
                        </div>
                        <div class="col-md-6">
                            {{
                            form_row(addressform.address)
                            }}
                        </div>
                    </div>
                <span>{{ form_end(addressform) }}</span>
            </div>


        </div>

    </div>
{% endblock %}