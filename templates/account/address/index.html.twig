{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <h1>Memebers Space</h1>
        <div class="row">
            <div class="col-md-3">
                {% include 'account/_menu.html.twig' %}
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-between">
                    <h5>My Addresses</h5>
                    <a href="{{ path('app_account_address_form') }}" class="btn btn-light">Add An Address</a>
                </div>
                {%if app.user.adresses|length ==0%}
                    <p>
                        You didn't add any addresses to your account!
                    </p>
                    {% else %}
                        <div class="row">
                            {% for address in app.user.adresses %}
                                <div class="col-md-4 mt-2">
                                    <div class="bg-light p-2 text-center">
                                        <strong>{{ address.firstname }} {{ address.lastname }}</strong><br/>
                                        {{ address.address }}<br/>
                                        {{ address.postal }}, {{ address.city }}<br/>
                                        {{ address.country }}
                                        <br>
                                        <a href="{{ path('app_account_address_form',{id:address.id}) }}" class="small text-secondary">Edit</a>
                                        <a href="{{ path('app_account_addresses_delete',{id:address.id}) }}" class="small text-secondary">Delete</a>

                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                {%endif  %}

            </div>
        </div>
    </div>
{% endblock %}
